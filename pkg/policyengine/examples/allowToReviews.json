{
    "kind": "AccessPolicy",
    "apiVersion": "clusterlink.net/v1alpha1",
    "metadata": {
        "name": "allow-to-reviews",
        "namespace": "default"
    },
    "spec": {
        "action": "allow",
        "from": [
            {
                "workloadSelector": {}
            }
        ],
        "to": [
            {
                "workloadSelector": {
                    "matchLabels": {
                        "clusterlink/metadata.serviceName": "reviews"
                    }
                }
            }
        ]
    }
}
